<main>
    <div class="container">
        <div class="login-main">
            <div class="login-title">
                <h3>Are you the Admin or Blogger?</h3>
                <h3>Please login</h3>
            </div>
            <div class="login">
                <form action="./login" method="post">
                    <p class="error"><%= Wrong %></p>
                    <p class="username"><span class="asterisk">*</span>Username</p>
                    <input type="text" name="Username" placeholder="Enter your username" autocomplete="off">

                    <p class="password"><span class="asterisk">*</span>Password</p>
                    <input type="password" name="Password" placeholder="Enter your passwords" autocomplete="off" required>

                    <div class="submit-login-form">
                        <button>Login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

